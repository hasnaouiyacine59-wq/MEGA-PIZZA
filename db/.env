# ============================================
# PostgreSQL Database Configuration
# ============================================

# Database Name (from init.sql)
POSTGRES_DB=mega_pizza_db

# Database User (from init.sql - superuser)
POSTGRES_USER=mega_pizza_admin
POSTGRES_PASSWORD=SecurePass123!

# Alternative: Use default postgres user
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=YourStrongPasswordHere

# ============================================
# Application Configuration
# ============================================

# JWT Secret (from init.sql)
JWT_SECRET=your-jwt-secret-here-change-this-in-production
JWT_EXPIRY=24h

# Application User Credentials (from init.sql)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@megapizza.com
ADMIN_PASSWORD=Admin@123
ADMIN_PHONE=+1234567891

# Default Restaurant (from init.sql)
DEFAULT_RESTAURANT_ID=REST-001
DEFAULT_RESTAURANT_NAME=Burger Palace
DEFAULT_RESTAURANT_ADDRESS=123 Food Street, Springfield
DEFAULT_RESTAURANT_PHONE=+1234567890

# ============================================
# Database Connection Settings
# ============================================

# Host and Port
DB_HOST=localhost
DB_PORT=5432

# Connection URL (alternative format)
DATABASE_URL=postgresql://mega_pizza_admin:SecurePass123!@localhost:5432/mega_pizza_db

# Connection Pool
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_IDLE=10000

# SSL
DB_SSL=false

# ============================================
# Timezone (from Dockerfile)
# ============================================
TZ=Africa/Algiers

# ============================================
# Backup Configuration
# ============================================
BACKUP_DIR=/backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# ============================================
# Security Settings
# ============================================
# Password hashing
BCRYPT_ROUNDS=12

# Session
SESSION_TIMEOUT=86400  # 24 hours in seconds

# Rate limiting
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15

# ============================================
# API Configuration
# ============================================
API_PORT=3000
API_HOST=0.0.0.0
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# ============================================
# External Services (if needed)
# ============================================

# Email Service (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Service
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_key

# Maps/Geolocation
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
